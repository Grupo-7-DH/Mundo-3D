<%- include('../partials/head') %>
<link rel="stylesheet" href="/css/register.css" />
<title>Mundo 3D</title>
</head>

<body>
  <%- include('../partials/header') %>

  <main class="main-register">
    <div class="container">
      <form class="registro">
        <label for="nombre">Nombre: </label>
        <input type="text" class="control" id="nombre" name="nombre" minlength="3" required />
        <label for="email">Correo Electrónico: </label>
        <input type="email" class="control" id="email" name="email" required />
        <label for="contrasena">Contraseña: </label>
        <input type="password" class="control" id="contrasena" name="contrasena" minlength="6" maxlength="12" required />
        <label for="confirmar-contrasena">Confirmar Contraseña: </label>
        <input type="password" class="control" id="confirmar-contrasena" name="confirmar-contrasena" minlength="6" maxlength="12" required />
        <button type="submit" class="subir-registro">Registrarse</button>
      </form>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>

</html>