<%- include('../partials/head') %>

<link rel="stylesheet" href="/css/productDetail.css" />
<title>Detalles del Producto</title>
</head>

<body>

  <%- include('../partials/header') %>

  <h2 class="containerTitle">Detalles del Producto</h2>

  <main class="containerMainProductDetail">
    <div class="containerCardProducto">
      <img src="/img/products/<%= product.Image %>" alt="<%= product.NameProduct %>">
      <section class="containerSectionDetalle">
        <h3><%= product.NameProduct %></h3>
        <p>Precio: $<%= product.IDProduct %></p>
        <p>Precio: $<%= product.Stock %></p>
        <p>Precio: $<%= product.Price %></p>
        <p>Precio: $<%= product.IDCategory %></p>
        <p><%= product.DescriptionProduct %></p>
        <a href="/productCart"><button>AGREGAR AL EVENTO</button></a>
        <form action="/product/delete/<%= product.IDProduct %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit">Eliminar</button>
      </section>

      </form>
      
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>

</html>